  \prebreakpenalty"5E=10000\relax  % ^
  \prebreakpenalty"7E=10000\relax  % ~
  \postbreakpenalty\ucs"301A=10000\relax % 〚
  \prebreakpenalty\ucs"301B=10000\relax  % 〛
